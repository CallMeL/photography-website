// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}

model Photo {
  id           String @id @default(uuid())
  title        String 
  description  String? @db.Text
  imageUrl     String @db.Text
  isFavorited  Boolean @default(false)

  cameraMake   String?
  cameraModel  String?
  cameraLens   String?
  timestamp    String?
  latitude     Float?
  longitude    Float?
  gpsAltitude  String?
  shutterSpeed String?
  iso          String?
  fNumber      String?
  focalLength  String?
  focalLengthIn35mmFilm String?

  width        Float
  height       Float
  aspectRatio  Float

  categoryId   String?
  category     Category? @relation(fields: [categoryId], references: [id])

  albumId      String?
  album        Album? @relation(fields: [albumId], references: [id])

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([categoryId])
  @@index([albumId])
}

model Category {
  id     String @id @default(uuid())
  title   String @unique

  photos Photo[]
}

model Album {
  id String @id @default(uuid())
  title String @unique
  imageUrl String @db.Text
  description  String @db.Text

  photos Photo[]

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model User {
  id        String @id @default(uuid())

  email     String @unique
  username  String?
  password  String
  imageUrl  String @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
